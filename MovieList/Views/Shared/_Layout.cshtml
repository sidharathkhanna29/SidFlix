<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <style>
        body {
            padding-top: 56px;
            background-color: #121212;
            color: #ffffff;
        }

        .jumbotron {
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.5)), url('https://as2.ftcdn.net/v2/jpg/02/16/47/65/1000_F_216476556_TL9UD06arg8SsekLJXdx2UZasiPGEcaY.jpg') no-repeat center center;
            background-size: cover;
            color: #ffffff;
            padding: 5rem 2rem;
        }

        .navbar {
            background-color: #1f1f1f;
        }

        .navbar-brand {
            font-weight: bold;
            color: #ffffff;
        }

        .navbar-nav .nav-link {
            color: #cccccc;
        }

        .navbar-nav .nav-link:hover {
            color: #ffffff;
        }

        /* Table Styling */
        .table {
            color: #ffffff; /* Default font color for table content */
            background-color: #1f1f1f; /* Dark background for the table */
            border: 1px solid #333333; /* Subtle border for the table */
        }

        .table th {
            background-color: #343a40; /* Darker background for the header */
            color: #f8f9fa; /* Light font color for the header */
            font-weight: bold;
            text-align: center;
        }

        .table td {
            color: #e0e0e0; /* Slightly lighter text for readability */
        }

        .table-hover tbody tr:hover {
            background-color: #444444; /* Row highlight on hover */
        }

        .table-bordered {
            border: 1px solid #555555; /* Border for entire table */
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #2c2c2c; /* Alternate row background for better contrast */
        }

        .footer {
            background-color: #1f1f1f;
            color: #aaaaaa;
            padding: 1rem 0;
        }

            .footer a {
                color: #ffffff;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="https://sidharathkhanna29.github.io/sidharathkhanna.html" target="_blank">
                SidFlix
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Movie")">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Genres")">Genres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Users")">Users</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid p-0">
        <!-- Hero Banner -->
        <header class="jumbotron text-center">
            <h1 class="display-4">Welcome to SidFlix!</h1>
            <p class="lead">Discover your favorite movies and share your thoughts.</p>
            <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Movie")">Explore Movies</a>
        </header>
    </div>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Render the Scripts section -->
    @RenderSection("Scripts", required: false)

    <!-- Footer -->
    <footer class="footer mt-auto">
        <div class="container text-center">
            &copy; 2024 SidFlix | <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>
